<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ts:token xmlns:ts="http://tokenscript.org/2022/09/tokenscript"
		  xmlns:xml="http://www.w3.org/XML/1998/namespace"
		  xsi:schemaLocation="http://tokenscript.org/2022/09/tokenscript https://www.tokenscript.org/schemas/2022-09/tokenscript.xsd"
		  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		  xmlns:ethereum="urn:ethereum:constantinople"
		  name="smart-token-layer">
	<ts:label>
		<ts:plurals xml:lang="en">
			<ts:string quantity="one">Smart Token Layer</ts:string>
			<ts:string quantity="other">Smart Token Layer</ts:string>
		</ts:plurals>
	</ts:label>
	<ts:meta>
		<ts:description xml:lang="en">Smart Token Layer Official Tokenscript</ts:description>
		<ts:aboutUrl xml:lang="en">https://www.smartlayer.network/</ts:aboutUrl>
		<ts:iconUrl xml:lang="en">data:image/png;base64,</ts:iconUrl>
	</ts:meta>
	<ts:contract interface="erc20" name="Token">
		<!-- <ts:address network="1">0xdb82c0d91e057e05600c8f8dc836beb41da6df14</ts:address> -->
		<ts:address network="11155111">0x0404ab3994ED48C300cE219546f757AD34484Dc7</ts:address>
	</ts:contract>
	<ts:contract interface="erc20" name="Stake">
		<!-- <ts:address network="1">TBC</ts:address> -->
		<ts:address network="11155111">0xE42185196640a4A2dfC668C19872958Db7AdaAC9</ts:address>
	</ts:contract>
	<ts:origins>
		<!-- Define the contract which holds the token that the user will use -->
		<ts:ethereum contract="Token"/>
	</ts:origins>

	<ts:cards>
		<ts:viewContent name="common" xmlns="http://www.w3.org/1999/xhtml">
			<ts:include type="html" src="./dist/index.html"/>
			<ts:include type="css" src="./src/styles.css"/>
		</ts:viewContent>

		<ts:card type="token" name="Info" origins="Token">
			<ts:label>
				<ts:string xml:lang="en">Info</ts:string>
			</ts:label>
			<ts:view xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" urlFragment="info">
				<ts:viewContent name="common"/>
			</ts:view>
		</ts:card>
		<ts:card type="action" name="Send" origins="Token">
			<ts:label>
				<ts:string xml:lang="en">Send</ts:string>
			</ts:label>
			<ts:transaction>
				<ethereum:transaction contract="Token" function="transfer" as="uint">
					<ts:data>
						<ts:address ref="receivingAccountAddress"/>
						<ts:uint256 ref="receivingAmount"/>
					</ts:data>
				</ethereum:transaction>
			</ts:transaction>
			<ts:view xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" urlFragment="send">
				<ts:viewContent name="common"/>
			</ts:view>
		</ts:card>

		<ts:card type="action" name="Approve" origins="Token">
			<ts:label>
				<ts:string xml:lang="en">Approve Staking Amount</ts:string> 
			</ts:label>
			<ts:transaction>
				<ethereum:transaction contract="Token" function="approve" as="uint">
					<ts:data>
						<ts:address ref="stakeAddress"/>
						<ts:uint256 ref="stakeAmount"/>
					</ts:data>
				</ethereum:transaction>
			</ts:transaction>
			<ts:view xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" urlFragment="approve">
				<ts:viewContent name="common"/>
			</ts:view>
		</ts:card>

		<ts:card type="action" name="Stake" origins="Token">
			<ts:label>
				<ts:string xml:lang="en">Stake</ts:string>
			</ts:label>
			<ts:transaction>
				<ethereum:transaction contract="Stake" function="stake" as="uint">
					<ts:data>
						<ts:uint128 ref="stakeAmount"/>
					</ts:data>
				</ethereum:transaction>
			</ts:transaction>
			<ts:view xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" urlFragment="stake">
				<ts:viewContent name="common"/>
			</ts:view>
		</ts:card>
		
		<ts:card type="action" name="Unstake" origins="Token">
			<ts:label>
				<ts:string xml:lang="en">Unstake</ts:string>
			</ts:label>
			<ts:transaction>
				<ethereum:transaction contract="Stake" function="withdraw" as="uint">
					<ts:data>
						<ts:uint128 ref="stakeAmount"/>
						<ts:uint128 ref="stakeReward"/>
					</ts:data>
				</ethereum:transaction>
			</ts:transaction>
			<ts:view xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" urlFragment="unstake">
				<ts:viewContent name="common"/>
			</ts:view>
		</ts:card>

	</ts:cards>

	<ts:attribute name="sendingAccountAddress">
		<ts:type>
			<ts:syntax>1.3.6.1.4.1.1466.115.121.1.15</ts:syntax>
		</ts:type>
		<ts:label>
			<ts:string xml:lang="en">sending account address</ts:string>
		</ts:label>
		<ts:origins>
			<ts:user-entry as="address"/>
		</ts:origins>
	</ts:attribute>

	<ts:attribute name="stakeAddress">
		<ts:type>
			<ts:syntax>1.3.6.1.4.1.1466.115.121.1.15</ts:syntax>
		</ts:type>
		<ts:label>
			<ts:string xml:lang="en">staking account address</ts:string>
		</ts:label>
		<ts:origins>
			<ts:user-entry as="address"/>
		</ts:origins>
	</ts:attribute>
	
	<ts:attribute name="receivingAccountAddress">
		<ts:type>
			<ts:syntax>1.3.6.1.4.1.1466.115.121.1.15</ts:syntax>
		</ts:type>
		<ts:label>
			<ts:string xml:lang="en">receiving account address</ts:string>
		</ts:label>
		<ts:origins>
			<ts:user-entry as="address"/>
		</ts:origins>
	</ts:attribute>

	<ts:attribute name="receivingAmount">
		<ts:type>
			<ts:syntax>1.3.6.1.4.1.1466.115.121.1.15</ts:syntax>
		</ts:type>
		<ts:label>
			<ts:string xml:lang="en">receiving amount</ts:string>
		</ts:label>
		<ts:origins>
			<ts:user-entry as="uint"/>
		</ts:origins>
	</ts:attribute>
	
	<ts:attribute name="stakeAmount">
		<ts:type>
			<ts:syntax>1.3.6.1.4.1.1466.115.121.1.15</ts:syntax>
		</ts:type>
		<ts:label>
			<ts:string xml:lang="en">staking amount</ts:string>
		</ts:label>
		<ts:origins>
			<ts:user-entry as="uint"/> 
		</ts:origins>
	</ts:attribute>
	
	<ts:attribute name="stakeReward">
		<ts:type>
			<ts:syntax>1.3.6.1.4.1.1466.115.121.1.15</ts:syntax>
		</ts:type>
		<ts:label>
			<ts:string xml:lang="en">staking reward</ts:string>
		</ts:label>
		<ts:origins>
			<ts:user-entry as="uint"/> 
		</ts:origins>
	</ts:attribute>

</ts:token>
